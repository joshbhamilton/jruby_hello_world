        <td><%= link_to 'Edit', edit_rails_url_path(rails_url) %></td>
        <td><%= link_to 'Destroy', rails_url, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>
  </article>
</section>