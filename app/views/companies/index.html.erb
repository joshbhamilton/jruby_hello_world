<header>
  <h1>List of Companies w/ Followers Currently in DB</h1>
</header>
<section>
  <article>
    <table>
      <tr>
        <th>Screen name</th>
        <th>Go to Twitter</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.screen_name, company %></td>
        <td><a href= <%="http://twitter.com/#!/#{company.screen_name}" %> >Twitter for <%= company.screen_name %></a></td>
        <!--><td><%= link_to 'Show', company %></td><!-->
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
      <% end %>
    </table>
    </article>
  </section>
